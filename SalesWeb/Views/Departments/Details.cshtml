@model SalesWeb.Models.Department

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="display-5 mt-3">@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-2 h5" style=" color: #F24D0D; flex: 0 0 5%">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-10 h5" style="flex: 1">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary buttons-crud">Editar</a>
    <a asp-action="Index" class="btn btn-outline-primary buttons-crud">Voltar</a>
</div>
