@model SalesWeb.Models.Department

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="display-5 mt-3">@ViewData["Title"]</h1>

<p class="fs-4" style="color: #C43C08;">Deseja mesmo deletar esse departamento?</p>
<div>
    <dl class="row">
        <dt class="col-2 h5" style="color: #F24D0D; flex: 0 0 5%">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-10 h5" style="flex: 1;">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <input type="submit" value="Deletar" class="btn btn-outline-danger button-danger" />
            <a asp-action="Index" class="btn btn-outline-primary buttons-crud">Voltar</a>
        </div>
    </form>
</div>
