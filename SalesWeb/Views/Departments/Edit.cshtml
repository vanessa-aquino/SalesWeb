@model SalesWeb.Models.Department

@{
    ViewData["Title"] = "Editar";
}
    
<h1 class="display-5 mt-3">@ViewData["Title"]</h1>

<div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div>
                    <label asp-for="Name" class="form-label fs-5"></label>
                    <input asp-for="Name" class="form-control custom-input" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Salvar" class="btn btn-outline-primary buttons-crud" />
                    <a asp-action="Index" class="btn btn-outline-primary buttons-crud">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
