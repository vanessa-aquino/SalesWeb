@model SalesWeb.ViewModels.SellerFormViewModel;

@{
    ViewData["Title"] = "Adicionar Vendedor";
}

<h1 class="display-5 mt-3">@ViewData["Title"]</h1>
<div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" class="d-flex gap-3 flex-column">
                <div class="d-flex flex-column">
                    <label asp-for="Seller.Name" class="form-label fs-5"></label> @*O asp-for vincula o campo HTML à propriedade correspondente do modelo, ou seja, o que for digitado no campo input, será automaticamente associado à propriedade no asp-for, nesse caso, a propriedade Seller.Name*@
                    <input asp-for="Seller.Name" class="form-control custom-input" placeholder="Nome completo"/>
                    <span asp-validation-for="Seller.Name" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.Email" class="form-label fs-5"></label>
                    <input asp-for="Seller.Email" class="form-control custom-input" placeholder="email@email.com"/>
                    <span asp-validation-for="Seller.Email" class="text-danger"></span>

                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.BirthDate" class="form-label fs-5"></label>
                    <input asp-for="Seller.BirthDate" type="date" class="form-control custom-input"/>
                    <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>

                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.BaseSalary" class="form-label fs-5"></label>
                    <input asp-for="Seller.BaseSalary" class="form-control custom-input" placeholder="Salário"/>
                    <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>

                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.DepartmentId" class="form-label fs-5">Departamento</label>
                    <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select custom-input">
                        <option value="">Selecione</option>
                    </select>
                    <span asp-validation-for="Seller.DepartmentId" class="text-danger"></span>
                    @*O asp-item preenche automaticamente um select com uma lista de opções*@
                </div>
                <div class="mt-3">
                    <input type="submit" value="Adicionar" class="btn btn-outline-primary buttons-crud" />
                    <a asp-action="Index" class="btn btn-outline-primary buttons-crud">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@*Para a validação funcionar no nível de JavaScript, ou seja, no nível do cliente:*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}