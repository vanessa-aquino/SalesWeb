@model SalesWeb.Models.Seller;

@{
    ViewData["Title"] = "Deletar Vendedor";
}

<h1 class="display-5 mt-3">@ViewData["Title"]</h1>

<p class="fs-4" style="color: #C43C08;">Deseja mesmo deletar esse vendedor?</p>
<div>
    <dl class="row">
        <dt class="col-4 col-sm-2 h5" style="color: #F24D0D;">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-8 col-sm-10 h5">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-4 col-sm-2 h5" style="color: #F24D0D;">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-8 col-sm-10 h5">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-4 col-sm-2 h5" style="color: #F24D0D;">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-8 col-sm-10 h5">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-4 col-sm-2 h5" style="color: #F24D0D;">
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd class="col-8 col-sm-10 h5">
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /> @*Campo oculto para enviar o código do vendedor que está sendo deletado*@
        <div class="mt-3">
            <input type="submit" value="Deletar" class="btn btn-outline-danger button-danger"/>
            <a asp-action="Index" class="btn btn-outline-primary buttons-crud">Voltar</a>
        </div>
    </form>
</div>