@model SalesWeb.ViewModels.SellerFormViewModel;

@{
    ViewData["Title"] = "Editar";
}

<h1 class="display-5 mt-3">@ViewData["Title"]</h1>

<div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="d-flex gap-3 flex-column">
                <input type="hidden" asp-for="Seller.Id" />
                <div class="d-flex flex-column">
                    <label asp-for="Seller.Name" class="form-label fs-5"></label>
                    <input asp-for="Seller.Name" class="form-control custom-input" />
                    <span asp-validation-for="Seller.Name" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.Email" class="form-label fs-5"></label>
                    <input asp-for="Seller.Email" class="form-control custom-input" />
                    <span asp-validation-for="Seller.Email" class="text-danger"></span>

                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.BirthDate" class="form-label fs-5"></label>
                    <input asp-for="Seller.BirthDate" class="form-control custom-input" />
                    <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>

                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.BaseSalary" class="form-label fs-5"></label>
                    <input asp-for="Seller.BaseSalary" class="form-control custom-input" />
                    <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>

                </div>
                <div class="d-flex flex-column">
                    <label asp-for="Seller.DepartmentId" class="form-label fs-5">Departamento</label>
                    <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select custom-input"></select>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Salvar" class="btn btn-outline-primary buttons-crud"/>
                    <a asp-action="Index" class="btn btn-outline-primary buttons-crud">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}